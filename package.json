{
  "name": "anilist-discord-bot",
  "version": "1.0.0",
  "description": "Search for anime, manga, and more from AniList",
  "author": "Josh Star",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "nodemon --watch src src/index.ts",
    "lint": "eslint --ext .ts src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^6.2.0",
    "graphql-request": "^1.8.2",
    "striptags": "^3.1.1",
    "turndown": "^5.0.3"
  },
  "devDependencies": {
    "@types/turndown": "^5.0.4",
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}